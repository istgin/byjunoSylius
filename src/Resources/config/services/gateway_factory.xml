<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.byjuno.prioritized_factory_name">byjuno</parameter>
    </parameters>
    <services>

        <defaults public="true" autoconfigure="false" autowire="false"/>

        <service id="byjuno.byjuno_plugin.gateway_factory" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
            <argument>Ij\SyliusByjunoPlugin\ByjunoPaymentGatewayFactory</argument>
            <tag name="payum.gateway_factory_builder" factory="byjuno"/>
        </service>

        <service
            id="Ij\SyliusByjunoPlugin\Resolver\ByjunoPaymentMethodsResolver"
            decorates="sylius.payment_methods_resolver"
        >
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="Ij\SyliusByjunoPlugin\Resolver\ByjunoPaymentMethodsResolver.inner" />
            <argument>%sylius.byjuno.prioritized_factory_name%</argument>
        </service>
<!--
        <service
            id="Ij\SyliusByjunoPlugin\Resolver\AfterCheckoutOrderPaymentProcessor"
            decorates="sylius.order_processing.order_payment_processor.after_checkout"
        >
            <argument type="service" id="Ij\SyliusByjunoPlugin\Resolver\AfterCheckoutOrderPaymentProcessor.inner" />
        </service>

        <service
            id="Ij\SyliusByjunoPlugin\Resolver\AfterCheckoutOrderPaymentProcessor2"
            decorates="sylius.unpaid_orders_state_updater"
        >
            <argument type="service" id="Ij\SyliusByjunoPlugin\Resolver\AfterCheckoutOrderPaymentProcessor2.inner" />
        </service>
-->

        <service id="sylius.listener.order_completexxx" class="Ij\SyliusByjunoPlugin\Resolver\OrderCompleteListener">
            <tag name="kernel.event_listener" event="sylius.order.post_update" method="sendConfirmationEmail" />
        </service>


        <service id="Ij\SyliusByjunoPlugin\Resolver\OrderInventoryOperator" decorates="sylius.inventory.order_inventory_operator">
            <argument type="service" id="Ij\SyliusByjunoPlugin\Resolver\OrderInventoryOperator.inner" />
        </service>



    </services>
</container>
